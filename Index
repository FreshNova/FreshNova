<script>
  // Rotating banner images
  const banners = [
    'https://images.unsplash.com/photo-1581579182347-3c2dfc843e1d?auto=format&fit=crop&w=1400&q=80',
    'https://images.unsplash.com/photo-1591012911204-749ad8d18c14?auto=format&fit=crop&w=1400&q=80',
    'https://images.unsplash.com/photo-1581579182675-603eeb0c0e8f?auto=format&fit=crop&w=1400&q=80'
  ];
  let index = 0;
  setInterval(() => {
    index = (index + 1) % banners.length;
    document.querySelector('.banner').style.backgroundImage = `url('${banners[index]}')`;
  }, 5000);

  // Contact form submission
  document.getElementById('contactForm').addEventListener('submit', function(e){
    e.preventDefault();
    document.getElementById('successMsg').style.display = 'block';
    this.reset();
  });

  // Scroll animations for sections
  const sections = document.querySelectorAll('section');
  window.addEventListener('scroll', () => {
    sections.forEach(sec => {
      const rect = sec.getBoundingClientRect();
      if(rect.top < window.innerHeight - 100) {
        sec.classList.add('visible');
      }
    });
  });
</script>

